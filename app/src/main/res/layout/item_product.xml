<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:padding="4dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="@drawable/item_bg"
android:padding="12dp"
android:layout_marginBottom="8dp"
android:elevation="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <CheckBox
        android:id="@+id/item_product_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:buttonTint="@color/bottom_nav_background"
        android:fontFamily="@font/nunitosans_regular"
        android:text="В корзине"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/item_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/nunitosans_bold"
        android:text="Название продукта" />

    <ImageButton
        android:id="@+id/item_product_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Удалить"/>
</LinearLayout>

<TextView
    android:id="@+id/item_product_comment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/gray"
    android:textSize="14sp"
    android:fontFamily="@font/nunitosans_regular"
    android:text="Комментарий" />

<TextView
    android:id="@+id/item_product_added_by"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/text_color"
    android:textSize="12sp"
    android:fontFamily="@font/nunitosans_bold"
    android:text="Добавил: Имя" />

<TextView
    android:id="@+id/item_product_added_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/gray"
    android:textSize="12sp"
    android:fontFamily="@font/nunitosans_regular"
    android:layout_gravity="end"
    android:text="27.04.2025 22:20" />

</LinearLayout>
    </FrameLayout>